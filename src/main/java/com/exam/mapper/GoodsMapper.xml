<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.exam.mapper.GoodsMapper">
   
	
	 
	 <select id="goodsList" resultType="GoodsDTO" parameterType="string">
	 	 
	 	  select gCode, 
	 	        gCategory,
	 	        gName,
	 	        gContent,
	 	        gPrice,
	 	        gImage
	 	  from goods
	 	  where gCategory = #{gCategory}
	 
	 </select>
	 
	  <select id="goodsRetrieve" resultType="GoodsDTO" parameterType="string">
	 	 
	 	  select gCode, 
	 	        gCategory,
	 	        gName,
	 	        gContent,
	 	        gPrice,
	 	        gImage
	 	  from goods
	 	  where gCode = #{gCode}
	 
	 </select>
	 

	 <insert id="goodsAdd" parameterType="GoodsDTO" >
	 	insert into goods (gCode,gCategory,gName,gContent,
	                       gPrice,gImage)
	   values ( #{gCode},#{gCategory},#{gName},#{gContent},
	            #{gPrice},#{gImage} )  
	 </insert>

<select id="search" resultType="GoodsDTO" parameterType="string">
	 		 	  select gCode, 
	 	        gCategory,
	 	        gName,
	 	        gContent,
	 	        gPrice,
	 	        gImage
	 	  from goods
	 	  where gName like CONCAT('%', #{gName}, '%')
	 </select>

	 
	 
</mapper>